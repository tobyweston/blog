---
const {post} = Astro.props;
import FormattedDate from '../FormattedDate.astro';
---
<article class="card hover:shadow-medium overflow-hidden">
  <a href={`/blog/${post.slug}/`} class="block no-underline">
    {post.data.heroImage && (
      <div class="preview-hero-image mb-4 -mx-6 -mt-6">
        <img src={post.data.heroImage} alt={post.data.title} class="w-full h-48 object-cover" />
      </div>
    )}
    <h3 class="text-2xl font-bold mb-2 text-gray-900">{post.data.title}</h3>
    {post.data.subTitle && (
      <p class="text-base text-gray-600 mb-2 italic">{post.data.subTitle}</p>
    )}
    <div class="text-sm text-gray-500 mb-3 font-medium">
      <FormattedDate date={post.data.pubDate} />
    </div>
    <p class="text-gray-700">{post.data.description}</p>
  </a>
</article>
