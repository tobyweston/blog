---
const {post} = Astro.props;
import FormattedDate from '../FormattedDate.astro';
---
<article class="card hover:shadow-medium overflow-hidden h-full">
  <a href={`/blog/${post.slug}/`} class="block no-underline flex flex-col h-full">
    {post.data.heroImage && (
      <div class="preview-hero-image mb-4 -mx-6 -mt-6 card-item-reveal" data-item-idx="0">
        <img src={post.data.heroImage} alt={post.data.title} class="w-full h-48 object-cover" />
      </div>
    )}
    {post.data.subTitle && (
      <p class="text-base text-gray-600 mb-2 italic card-item-reveal" data-item-idx="2">{post.data.subTitle}</p>
    )}
    <h3 class="text-2xl font-bold mb-2 text-gray-900 card-item-reveal" data-item-idx="1">{post.data.title}</h3>
    <div class="text-sm text-gray-500 mb-3 font-medium card-item-reveal" data-item-idx="3">
      <FormattedDate date={post.data.pubDate} />
    </div>
    <p class="text-gray-700 card-item-reveal" data-item-idx="4">{post.data.description}</p>
  </a>
</article>
