---
const {post} = Astro.props;
import FormattedDate from '../FormattedDate.astro';
---
<article class="card hover:shadow-medium">
  <a href={`/blog/${post.slug}/`} class="block no-underline">
    <h3 class="text-xl font-bold mb-2 text-gray-900">{post.data.title}</h3>
    <div class="text-sm text-gray-500 mb-3 font-medium">
      <FormattedDate date={post.data.pubDate} />
    </div>
    <p class="text-gray-700 line-clamp-3">{post.data.description}</p>
  </a>
</article>
