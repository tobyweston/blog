---
import FormattedDate from '../FormattedDate.astro';

const { video } = Astro.props;
const embedUrl = `https://www.youtube-nocookie.com/embed/${video.data.youtubeId}?rel=0`;
---

<article class="card video-card">
  <div class="video-frame">
    <iframe
      src={embedUrl}
      title={video.data.title}
      loading="lazy"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>
  <div class="video-body">
    <h3 class="text-2xl font-semibold mb-2">{video.data.title}</h3>
    <div class="text-sm text-gray-500 mb-3 font-medium">
      <FormattedDate date={video.data.pubDate} />
    </div>
    <p class="text-gray-700">{video.data.description}</p>
  </div>
</article>

<style>
  .video-card {
    padding: 0;
    overflow: hidden;
  }

  .video-frame {
    position: relative;
    width: 100%;
    padding-top: 56.25%;
    background: #0f172a;
  }

  .video-frame iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .video-body {
    padding: 1.5rem;
  }
</style>

