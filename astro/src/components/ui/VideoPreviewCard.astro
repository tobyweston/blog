---
import FormattedDate from '../FormattedDate.astro';

const { video } = Astro.props;
const embedUrl = `https://www.youtube-nocookie.com/embed/${video.data.youtubeId}?rel=0`;
const detailHref = `/video/${video.slug}/`;
---

<article class="card video-preview">
  <a href={detailHref} class="video-preview-link" aria-label={`Watch ${video.data.title}`}>
    <div class="video-preview-frame">
      <iframe
        src={embedUrl}
        title={video.data.title}
        loading="lazy"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
  </a>
  <div class="video-preview-body">
    <div class="video-preview-meta">
      <h3 class="text-2xl font-semibold">{video.data.title}</h3>
      <div class="text-sm text-gray-500 font-medium">
        <FormattedDate date={video.data.pubDate} />
      </div>
    </div>
    <p class="text-gray-700">{video.data.description}</p>
    <a href={detailHref} class="video-preview-cta">Watch Video</a>
  </div>
</article>

<style>
  .video-preview {
    padding: 0;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .video-preview-link {
    display: block;
    color: inherit;
  }

  .video-preview-frame {
    position: relative;
    width: 100%;
    padding-top: 56.25%;
    background: #0f172a;
  }

  .video-preview-frame iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .video-preview-body {
    padding: 1.5rem;
    display: grid;
    gap: 0.75rem;
  }

  .video-preview-meta {
    display: grid;
    gap: 0.25rem;
  }

  .video-preview-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
  }

  .video-preview-cta:hover {
    text-decoration: underline;
  }
</style>

