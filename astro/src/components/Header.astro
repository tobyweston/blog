---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
import logo from '../content/images/robot-logo_105x132.png';
---
<header class="header">
  <div class="header-container">
    <div class="logo-section">
      <a href="/" class="logo-link">
        <Image
          src={logo}
          alt="bad.robot logo"
          width={84}
          height={106}
          class="logo-image"
        />
        <div class="logo-text-block">
          <h1 class="logo-title logo-text header-logo-text">{SITE_TITLE}</h1>
          <h2 class="logo-subtitle logo-subtitle-text header-subtitle">{SITE_DESCRIPTION}</h2>
        </div>
      </a>
    </div>

    <nav class="nav">
      <a href="/blog">Blog</a>
      <a href="/book">Books</a>
      <a href="/archive">Archive</a>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 2rem;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    max-width: 100%;
  }

  .logo-section {
    display: flex;
    align-items: center;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
  }

  .logo-image {
    width: 84px;
    height: auto;
    flex-shrink: 0;
  }

  .logo-title {
    margin: 0;
    text-align: left;
  }

  .logo-text-block {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }

  .logo-subtitle {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 400;
    line-height: 1.2;
    text-align: left;
  }

  .header-subtitle {
    font-size: 0.95rem;
    letter-spacing: 0.01em;
  }

  .nav {
    display: flex;
    gap: 2rem;
    align-items: flex-end;
    font-family: 'IBM Plex Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-secondary);
    letter-spacing: 0.01em;
  }

  .nav a {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .nav a:hover {
    color: #0066cc;
  }
</style>
