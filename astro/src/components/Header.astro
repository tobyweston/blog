---
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import logoImage from '../assets/robot-logo.png';
---
<header class="py-4 border-b border-gray-200">
  <div class="container mx-auto flex items-center justify-between px-4">
    <a href="/" class="flex items-center gap-3">
      <Image
        src={logoImage}
        alt="bad.robot logo"
        width={64}
        height={80}
        class="header-logo-image"
        densities={[1, 2]}
      />
      <span class="logo-text header-logo-text">{SITE_TITLE}</span>
    </a>

    <nav class="flex items-center gap-6 text-sm font-medium">
      <a href="/blog" class="hover:text-accent transition-colors">Blog</a>
      <a href="/book" class="hover:text-accent transition-colors">Books</a>
      <a href="/archive" class="hover:text-accent transition-colors">Archive</a>
    </nav>
  </div>
</header>
