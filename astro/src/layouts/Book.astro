---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'book'>['data'];

const { title, description, pubDate, coverImage, keywords } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} keywords={keywords}/>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{coverImage && <img width={1020} height={510} src={coverImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
					{ pubDate && (
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						)
                    }
						<h1>XXX {title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

